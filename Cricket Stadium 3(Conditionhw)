import java.io.*;
import java.util.*;

public class Solution
{
    public static void main(String[] args)
    {
        int l,b,a,p;
        Scanner s=new Scanner(System.in);
         l=s.nextInt();
         b=s.nextInt();
         p=2*(l+b);
         a=l*b;
        System.out.println(p);
        System.out.println(a);
    }
}
